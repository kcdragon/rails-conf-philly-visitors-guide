<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-8 text-gray-800">Philadelphia Restaurants</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @places.each do |place| %>
      <%= link_to place_path(place.name.parameterize), class: "block" do %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <div class="p-6">
            <h2 class="text-2xl font-semibold mb-3 text-gray-800"><%= place.name %></h2>
            <p class="text-gray-600 mb-6 leading-relaxed"><%= place.description %></p>
            <div class="flex flex-wrap gap-2">
              <% place.tags.each do |tag| %>
                <span class="px-4 py-1.5 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium hover:bg-indigo-100 transition-colors duration-200">
                  <%= tag %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
