<div class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <%= link_to places_path, class: "text-indigo-600 hover:text-indigo-800 flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Restaurants
      <% end %>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-8">
        <h1 class="text-4xl font-bold mb-4 text-gray-800"><%= @place.name %></h1>
        <p class="text-gray-600 text-lg mb-6"><%= @place.description %></p>

        <div class="flex flex-wrap gap-2 mb-8">
          <% @place.tags.each do |tag| %>
            <span class="px-4 py-1.5 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium">
              <%= tag %>
            </span>
          <% end %>
        </div>

        <div class="aspect-w-16 aspect-h-9 mb-8">
          <iframe
            width="100%"
            height="450"
            style="border:0"
            loading="lazy"
            allowfullscreen
            src="https://www.google.com/maps/embed/v1/place?key=<%= Rails.application.credentials.dig(:google, :maps, :embed, :api_key) %>&q=<%= @place.name %>+Philadelphia+PA">
          </iframe>
        </div>
      </div>
    </div>
  </div>
</div>
