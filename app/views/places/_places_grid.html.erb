<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-8 text-gray-800">Philadelphia Restaurants</h1>

  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-700">Filter by Tag</h2>
    <div class="flex flex-wrap gap-2">
      <%= link_to places_path, class: "px-4 py-2 rounded-full text-sm font-medium #{@selected_tag.nil? ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}", data: { turbo_frame: "places_grid" } do %>
        All (<%= Place.all.count %>)
      <% end %>
      <% @all_tags.each do |tag| %>
        <%= link_to places_path(tag: tag), class: "px-4 py-2 rounded-full text-sm font-medium #{@selected_tag == tag ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}", data: { turbo_frame: "places_grid" } do %>
          <%= tag %> (<%= @tag_counts[tag] %>)
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @places.each do |place| %>
      <%= link_to place_path(place.name.parameterize), class: "block h-full" do %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden h-full">
          <div class="p-6 flex flex-col h-full">
            <h2 class="text-2xl font-semibold mb-3 text-gray-800"><%= place.name %></h2>
            <p class="text-gray-600 mb-6 leading-relaxed flex-grow"><%= place.description %></p>
            <div class="flex flex-wrap gap-2">
              <% place.tags.each do |tag| %>
                <span class="px-4 py-1.5 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium hover:bg-indigo-100 transition-colors duration-200">
                  <%= tag %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
