<div class="container mx-auto px-4 py-12" data-controller="drawer">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800 dark:text-gray-100">Restaurants</h1>
    <button type="button" data-action="drawer#toggle" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
      Filters
    </button>
  </div>

  <%# Backdrop %>
  <div data-drawer-target="backdrop" class="fixed inset-0 bg-gray-900/50 hidden" data-action="click->drawer#close"></div>

  <%# Drawer %>
  <div data-drawer-target="drawer" class="fixed inset-y-0 left-0 w-80 bg-white dark:bg-gray-800 shadow-xl transform -translate-x-full transition-transform duration-300 ease-in-out overflow-y-auto">
    <div class="p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Filters</h2>
        <button type="button" data-action="drawer#close" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4 text-gray-700 dark:text-gray-300">Walking Distance</h3>
        <div class="flex flex-col gap-2">
          <%= link_to places_path(tag_name: @selected_tag_name), class: "px-4 py-2 rounded-lg text-sm font-medium #{@selected_walking_time.nil? ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}", data: { turbo_frame: "places_grid", turbo_action: "advance" } do %>
            Any Distance
          <% end %>
          <% ['10', '20', '30'].each do |minutes| %>
            <%= link_to places_path(tag_name: @selected_tag_name, walking_time: minutes), class: "px-4 py-2 rounded-lg text-sm font-medium #{@selected_walking_time == minutes ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}", data: { turbo_frame: "places_grid", turbo_action: "advance" } do %>
              Within <%= minutes %> minutes
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4 text-gray-700 dark:text-gray-300">Tags</h3>
        <div class="flex flex-col gap-2">
          <%= link_to places_path, class: "px-4 py-2 rounded-lg text-sm font-medium #{@selected_tag_name.nil? ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}", data: { turbo_frame: "places_grid", turbo_action: "advance" } do %>
            All (<%= Place.all.count %>)
          <% end %>
          <% @tags.each do |tag| %>
            <%= link_to places_path(tag_name: tag.name, walking_time: params[:walking_time]), class: "px-4 py-2 rounded-lg text-sm font-medium #{@selected_tag_name == tag.name ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}", data: { turbo_frame: "places_grid", turbo_action: "advance" } do %>
              <%= tag.name %> (<%= tag.places_count %>)
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @places.each do |place| %>
      <%= link_to place_path(place.id), class: "block h-full", data: { turbo_frame: "_top" } do %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden h-full">
          <div class="p-6 flex flex-col h-full">
            <h2 class="text-2xl font-semibold mb-3 text-gray-800 dark:text-gray-100"><%= place.name %></h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed flex-grow"><%= place.description %></p>
            <div class="flex flex-wrap gap-2">
              <% place.tags.each do |tag| %>
                <span class="px-4 py-1.5 bg-indigo-50 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded-full text-sm font-medium hover:bg-indigo-100 dark:hover:bg-indigo-900/70 transition-colors duration-200">
                  <%= tag.name %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
