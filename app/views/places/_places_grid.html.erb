<div class="<%= @view == 'map' ? 'h-screen flex flex-col' : 'container mx-auto px-4 py-12' %>" data-controller="drawer map" data-action="theme:toggle@window->map#draw" data-map-center-position-value="<%= { lat: Venue.latitude, lng: Venue.longitude, title: Venue.name }.to_json %>" data-map-markers-value="<%= @places.map { |place| { lat: place.latitude, lng: place.longitude, title: place.name, tags: place.tags.map(&:name), path: place_path(place.id) } }.to_json %>" data-map-center-position-image-url-value="<%= image_url('rails-conf-logo-map-marker.svg') %>">
  <div class="<%= @view == 'map' ? 'px-4 py-4' : '' %> flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800 dark:text-gray-100">Restaurants</h1>
    <div class="flex gap-4">
      <%# View Toggle Button %>
      <%= link_to places_path(view: @view == 'list' ? 'map' : 'list', tag_name: @selected_tag_name, walking_time: @selected_walking_time),
                  class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors flex items-center gap-2" do %>
        <% if @view == 'list' %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          Show Map
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
          </svg>
          Show List
        <% end %>
      <% end %>

      <button type="button" data-action="drawer#toggle" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
        Filters
      </button>
    </div>
  </div>

  <%# Backdrop %>
  <div data-drawer-target="backdrop" class="fixed inset-0 bg-gray-900/50 hidden z-20" data-action="click->drawer#close"></div>

  <%# Drawer %>
  <div data-drawer-target="drawer" class="fixed inset-y-0 left-0 w-80 bg-white dark:bg-gray-800 shadow-xl transform -translate-x-full transition-transform duration-300 ease-in-out flex flex-col z-30">
    <%= form_tag places_path, method: :get, data: { turbo_frame: "places_grid", turbo_action: "advance" }, class: "flex flex-col h-full" do %>
      <%= hidden_field_tag :view, @view %>

      <div class="p-6 flex-shrink-0">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Filters</h2>
          <button type="button" data-action="drawer#close" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto px-6">
        <div class="mb-8">
          <h3 class="text-lg font-semibold mb-4 text-gray-700 dark:text-gray-300">Walking Distance</h3>
          <div class="flex flex-col gap-3">
            <label class="flex items-center">
              <input type="radio" name="walking_time" value="" class="sr-only peer" <%= 'checked' if @selected_walking_time.nil? %>>
              <span class="w-full px-4 py-2 rounded-lg text-sm font-medium peer-checked:bg-indigo-600 peer-checked:text-white bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 cursor-pointer">
                Any Distance
              </span>
            </label>
            <% ['15', '30'].each do |minutes| %>
              <label class="flex items-center">
                <input type="radio" name="walking_time" value="<%= minutes %>" class="sr-only peer" <%= 'checked' if @selected_walking_time == minutes %>>
                <span class="w-full px-4 py-2 rounded-lg text-sm font-medium peer-checked:bg-indigo-600 peer-checked:text-white bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 cursor-pointer">
                  Within <%= minutes %> minutes
                </span>
              </label>
            <% end %>
          </div>
        </div>

        <div class="mb-8">
          <h3 class="text-lg font-semibold mb-4 text-gray-700 dark:text-gray-300">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <label class="">
              <input type="radio" name="tag_name" value="" class="sr-only peer" <%= 'checked' if @selected_tag_name.nil? %>>
              <span class="block w-full px-4 py-2 rounded-lg text-sm font-medium peer-checked:bg-indigo-600 peer-checked:text-white bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 cursor-pointer text-center whitespace-nowrap">
                All (<%= Place.all.count %>)
              </span>
            </label>
            <% @tags.each do |tag| %>
              <label class="">
                <input type="radio" name="tag_name" value="<%= tag.name %>" class="sr-only peer" <%= 'checked' if @selected_tag_name == tag.name %>>
                <span class="block w-full px-4 py-2 rounded-lg text-sm font-medium peer-checked:bg-indigo-600 peer-checked:text-white bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 cursor-pointer text-center whitespace-nowrap"><%= tag.name %> (<%= tag.places_count %>)</span>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
        <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
          Apply Filters
        </button>
      </div>
    <% end %>
  </div>

  <%# Hidden input to preserve the view parameter %>
  <%= hidden_field_tag :view, @view %>

  <%# Map View %>
  <% if @view == 'map' %>
    <div data-map-target="map" class="flex-1 relative z-10"></div>
  <% end %>

  <%# List View %>
  <% if @view == 'list' %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @places.each_with_index do |place, index| %>
        <%= link_to place_path(place.id), class: "block h-full", data: { turbo_frame: "_top" } do %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden h-full">
            <div class="p-6 flex flex-col gap-3 h-full">
              <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100"><%= index + 1 %>. <%= place.name %></h2>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed"><%= place.description %></p>
              <% if place.walking_time_in_seconds.present? %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600 dark:text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13 5.5a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM7.525 8.646a6.5 6.5 0 00-1.525 4.104v2.25h8v-2.25a6.5 6.5 0 00-1.525-4.104l-1.475 1.475V12h-2V10.12L7.525 8.646zM10 18a1 1 0 01-1-1h2a1 1 0 01-1 1z" />
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400">
                    <%= (place.walking_time_in_seconds / 60.0).ceil %> minute walk from conference
                  </span>
                </div>
              <% end %>
              <div class="flex flex-wrap gap-2">
                <% place.tags.each do |tag| %>
                  <span class="px-4 py-1.5 bg-indigo-50 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded-full text-sm font-medium hover:bg-indigo-100 dark:hover:bg-indigo-900/70 transition-colors duration-200">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
